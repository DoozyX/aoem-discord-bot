{
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "lib": [
      "es2021"
    ],
    "declaration": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "inlineSources": true,
    "baseUrl": "./",
    "paths": {
      "@app/*": [
        "src/*"
      ],
      "@config/*": [
        "config/*"
      ],
      "@locales/*": [
        "locales/*"
      ],
      "@misc/*": [
        "misc/*"
      ]
    }
  },
  "exclude": [
    "dist",
    "node_modules",
    "tests"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}
